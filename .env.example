# Environment Configuration Template for Block Theory

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/blocktheory

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=blocktheoryai@gmail.com

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# AI Services (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Security Configuration
NODE_ENV=production
SESSION_SECRET=your_secure_session_secret_here
ALLOWED_ORIGINS=https://yourapp.replit.app,https://blocktheory.replit.app

# Replit Configuration (Auto-populated in Replit)
REPL_ID=your_repl_id
REPL_SLUG=your_repl_slug
REPLIT_DB_URL=your_replit_db_url
REPLIT_DOMAINS=your-domain.replit.app

# Google Analytics (Optional)
GA_TRACKING_ID=your_google_analytics_id

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=10
PAYMENT_RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGIN=https://yourapp.replit.app
ENABLE_CORS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true